<!DOCTYPE html>
<html>
<head>
  <title>DojoSecrets</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>
<body>
<% if current_user %>
  <div class="d-flex justify-content-end">
    <div class="p-2"><a data-method="delete" href="/sessions/<%= current_user.id %>"><button type="submit" class="btn btn-primary">Logout</button></a></div>
    <div class="p-2"><a href="/users/<%= current_user.id %>/edit"><button type="submit" class="btn btn-primary">Edit Account</button></a></div>
    <div class="p-2"><a href="/secrets"><button type="submit" class="btn btn-primary">View Secrets</button></a></div>
  </div>
<% end %> 
<%= yield %>

</body>
</html>
